<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonMain" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/main_btn_text</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/main_btn_text</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin16</item>
    </style>

    <style name="ErrorRefreshButton">
        <item name="android:backgroundTint">@color/settings_text_button</item>
        <item name="android:textColor">@color/wb_bg</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>

    </style>
    
    <style name="TextButtonSettings">
        <item name="android:textColor">@color/settings_text_button</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_21</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_21</item>
        <item name="drawableTint">@color/settings_draw_tint</item>
        <item name="android:textSize">@dimen/setting_text_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        
    </style>
</resources>