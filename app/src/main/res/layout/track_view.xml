<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin16"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/vArt"
        android:layout_width="@dimen/album_image_45dp"
        android:layout_height="@dimen/album_image_45dp"
        android:src="@drawable/ic_placeholder_45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="@color/settings_text_button"
            android:textSize="@dimen/setting_text_size_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/vArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:text="Artist"
                android:textColor="@color/settings_draw_tint"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/vDivider"
                android:layout_width="3dp"
                android:layout_height="@dimen/track_divider_size_3dp"
                android:layout_marginStart="@dimen/track_divider_margin_5dp"
                android:layout_marginEnd="5dp"
                app:tint="@color/settings_draw_tint"
                android:src="@drawable/ic_track_dot_3"/>
            <TextView
                android:id="@+id/vTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:text="0:00"
                android:textColor="@color/settings_draw_tint"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/icon_size_24"
        android:layout_height="@dimen/icon_size_24"
        android:src="@drawable/ic_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>